<Page x:Class="LANChat.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LANChat"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1050"
      Title="Menu">

    <Grid>
        <Button Content="Server" HorizontalAlignment="Center" Margin="0,80,0,0" VerticalAlignment="Center" MinWidth="100" MinHeight="20" FontSize="30" Padding="15,10,15,10" Click="GoToServer"/>
        <Button Content="Client" HorizontalAlignment="Center" Margin="0,0,0,80" VerticalAlignment="Center" MinWidth="100" MinHeight="20" FontSize="30" Padding="20,10,20,10" Click="GoToClient"/>

    </Grid>
</Page>
